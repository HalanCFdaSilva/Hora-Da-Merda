<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/calendario_activity_image_view_day"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:contentDescription="imagem fundo do dia do calendario"
        android:isScrollContainer="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fundo_dia_calendario_com_selo" />

    <TextView
        android:id="@+id/calendario_activity_string_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/calendario_activity_image_view_day"
        app:layout_constraintEnd_toEndOf="@+id/calendario_activity_image_view_day"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="@+id/calendario_activity_image_view_day"
        app:layout_constraintTop_toTopOf="@+id/calendario_activity_image_view_day"
        app:layout_constraintVertical_bias="0.01999998"
        tools:text="01" />

    <TextView
        android:id="@+id/calendario_activity_string_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/calendario_activity_image_view_day"
        app:layout_constraintEnd_toEndOf="@+id/calendario_activity_string_day"
        app:layout_constraintStart_toStartOf="@+id/calendario_activity_string_day"
        app:layout_constraintTop_toBottomOf="@+id/calendario_activity_string_day"
        app:layout_constraintVertical_bias="0.0"
        tools:text="SEG" />
</androidx.constraintlayout.widget.ConstraintLayout>